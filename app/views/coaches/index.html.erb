<%# <h1>Coaches#index</h1>
<p>Find me in app/views/coaches/index.html.erb</p> %>
<h2>All Coaches</h2>
<% if @coaches.empty? %>
  <p>There are no coaches in the NBA.</p>
<%else%>
  <% @coaches.each do |coach| %>
    <div class="card" style="margin-bottom: 5px">
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to coach.name, coach_path(coach) %>
        </h5>
        <p class="card-text">Coach of the basketball team <%= link_to coach.team.name, coach.team %></p>
      </div>
    </div>
  <% end %>
<% end %>