<%# <h1>Players#index</h1>
<p>Find me in app/views/players/index.html.erb</p> %>
<h2>All Players</h2>
<% if @players.empty? %>
  <p>There are no players in the NBA.</p>
<%else%>
  <% @players.each do |player| %>
    <div class="card" style="margin-bottom: 5px">
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to player.name, player_path(player) %>
        </h5>
        <p class="card-text">Member of the basketball team <%= link_to player.team.name, player.team %></p>
      </div>
    </div>
  <% end %>
<% end %>